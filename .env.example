
# PageClassifier Configuration
MIN_FINANCIAL_TERMS=5
ZSCORE_THRESHOLD=1.0
GAP_PERCENTAGE_THRESHOLD=30.0 

# AI Service Configuration
DEFAULT_AI_SERVICE=gemini  # Options: openai, anthropic, gemini
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

#AI Process Type
AI_SERVICE_PROCESS_TYPE= OCR_SERVICE # Options: OCR_SERVICE, DIRECT

# Azure Vision OCR Configuration
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=your_azure_document_intelligence_endpoint_here
AZURE_DOCUMENT_INTELLIGENCE_KEY=your_azure_document_intelligence_key_here

# OCR Service Configuration
DEFAULT_OCR_SERVICE=aws_textract  # Options: azure_document_intelligence, aws_textract

# File Processing Configuration
TEMP_DIR=temp
FILE_CLEANUP_AGE=3600

# Telegram Configuration
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Set to true to send S3 URLs to Telegram, false to send files directly
TELEGRAM_USE_S3_URL=false

# Result Type Configuration
RESULT_TYPE=multi_page  # Options: single_page, multi_page
MULTI_PAGE_RESULT_TYPE=consolidated  # Used when RESULT_TYPE=multi_page

# AWS Textract Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name_here

